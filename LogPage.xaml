<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRapp.LogPage"
             Title="View logs">
    <!--disables the back button-->
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False"/>
    </Shell.BackButtonBehavior>
    <ScrollView>
        <!--the page includes a return button and an editor to show the records-->
        <VerticalStackLayout BackgroundColor="White">
            <Button x:Name="Return_2" Text="Return to menu" Clicked="Return_2_Clicked" BackgroundColor="DimGray" WidthRequest="150" TextColor="White"/>
            <Editor x:Name="LogViewer" IsReadOnly="True" FontSize="15" TextColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>